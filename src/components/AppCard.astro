---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";

interface Props {
  title: string;
  date: string;
  imagePath: string;
  altText: string;
  link: string;
}

const { title, date, imagePath, altText, link } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath])
  throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<a href={link} aria-label={`Read more about ${title}`}>
  <article
    class="group flex flex-col gap-4 hover:cursor-pointer hover:rounded-xl hover:bg-theme-gainsboro/25 hover:shadow-lg sm:flex-row sm:gap-16"
    role="article"
    aria-labelledby={`article-title-${title}`}
  >
    <Image
      src={images[imagePath]()}
      alt={altText}
      format="webp"
      loading="eager"
      width={160}
      height={160}
      class="size-[140px] rounded-xl group-hover:rounded-xl sm:size-40 sm:group-hover:rounded-r-none"
    />
    <div class="flex flex-col justify-center gap-4">
      <h2 class="text-lg font-semibold sm:text-xl" id={`article-title-${title}`}>
        {title}
      </h2>
      <p
        class="text-xs font-medium text-theme-stormy-ash sm:text-sm"
        aria-label={`Published on ${date}`}
      >
        {date}
      </p>
    </div>
  </article>
</a>
